{
  "private": true,
  "type": "module",
  "name": "react-ts",
  "description": "리액트 + 타입스크립트 빌드 환경을 구성합니다.",
  "version": "1.0.0",
  "bun-create": {
    "preinstall": [],
    "postinstall": [],
    "start": "bun run dev"
  },
  "scripts": {
    "dev": "bun src/index.html",
    "build": "bun build src/index.html --outdir dist --target browser",
    "preview": "bun dist/index.html --port=4000",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "clean": "rimraf -rf dist"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bun": "^1.2.19",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}